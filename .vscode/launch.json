{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Node: Frontend",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/frontend"
    },
    {
      "name": "Python: Backend",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "cwd": "${workspaceFolder}",
      "args": ["backend.main:app", "--reload"],
      "jinja": true
    }
  ]
}
