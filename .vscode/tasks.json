{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "dev",
      "path": "frontend/",
      "problemMatcher": [],
      "label": "Frontend",
      "detail": "Start the frontend"
    },
    {
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "uvicorn", "backend.app.main:app", "--reload"],
      "problemMatcher": [],
      "label": "Backend",
      "detail": "Start the backend",
      "group": "build"
    },
    {
      "type": "shell",
      "command": "task fullstack",
      "options": {
        "env": {
          "PY_INTERPRETER": "${command:python.interpreterPath}"
        }
      },
      "problemMatcher": [],
      "label": "Fullstack",
      "detail": "Start both frontend and backend"
    }
  ]
}
